<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.gmail.sofiapatiy.ui.home.HomeFragment"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/showDetails"
            app:destination="@id/navigation_record_details" />
    </fragment>

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.gmail.sofiapatiy.ui.settings.SettingsFragment"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/navigation_about"
        android:name="com.gmail.sofiapatiy.ui.about.AboutFragment"
        tools:layout="@layout/fragment_about" />

    <fragment
        android:id="@+id/navigation_record_details"
        android:name="com.gmail.sofiapatiy.ui.record.RecordFragment"
        tools:layout="@layout/fragment_record" />

    <action
        android:id="@+id/showDetails"
        app:destination="@id/navigation_record_details" />
</navigation>